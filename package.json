{
  "name": "sql-in-python-highlighter",
  "displayName": "SQL in Python Highlighter",
  "description": "Syntax highlighting for SQL in Python strings marked with --sql",
  "version": "0.2.0",
  "publisher": "eluc1a",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:sql",
    "onLanguage:jupyter",
    "onCommand:sql-in-python.formatSql"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql-in-python.formatSql",
        "title": "Format SQL"
      }
    ],
    "keybindings": [
      {
        "command": "sql-in-python.formatSql",
        "key": "shift+alt+f",
        "when": "editorTextFocus && resourceExtname =~ /\\.(py|sql|ipynb)/"
      }
    ],
    "configurationDefaults": {
      "[sql]": {
        "editor.defaultFormatter": "eluc1a.sql-in-python-highlighter"
      }
    },
    "grammars": [
      {
        "scopeName": "source.python.embedded.sql",
        "path": "./syntaxes/sql-in-python.tmLanguage.json",
        "injectTo": [
          "source.python"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.sql": "sql"
        }
      }
    ]
  },
  "scripts": {
    "package": "npx @vscode/vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eluc1a/sql-in-python-highlighter.git"
  },
  "license": "MIT",
  "dependencies": {
    "sql-formatter": "^15.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@vscode/vsce": "^3.6.0"
  },
  "bugs": {
    "url": "https://github.com/eluc1a/sql-in-python-highlighter/issues"
  },
  "homepage": "https://github.com/eluc1a/sql-in-python-highlighter#readme",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "keywords": [
    "python",
    "sql",
    "syntax",
    "highlighting",
    "jupyter"
  ],
  "icon": "images/icon.png"
}
